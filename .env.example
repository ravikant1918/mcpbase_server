# MCPBase Environment Variables
# Copy this file to .env and modify values as needed
# These variables override the default configuration values

# Server settings
MCPBASE_SERVER_NAME="MCPBase Server"
MCPBASE_SERVER_VERSION="1.0.0"
MCPBASE_SERVER_DESCRIPTION="A minimal yet structured MCP base server"

# Network settings
MCPBASE_DEFAULT_HOST="0.0.0.0"
MCPBASE_DEFAULT_HTTP_PORT=8000
MCPBASE_DEFAULT_SSE_PORT=8000

# MCP Protocol settings
MCPBASE_PROTOCOL_VERSION="2024-11-05"

# Logging settings
MCPBASE_LOG_LEVEL="INFO"
MCPBASE_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Transport settings
MCPBASE_DEFAULT_TRANSPORT="stdio"
MCPBASE_SSE_MOUNT_PATH="/sse"

# Resource settings
MCPBASE_ENABLE_KV_STORE=true
MCPBASE_KV_STORE_URI="kv://store"

# Development settings
MCPBASE_DEBUG=false
MCPBASE_RELOAD=false

# Optional features
MCPBASE_ENABLE_FASTAPI=true
MCPBASE_ENABLE_LOGGING=true